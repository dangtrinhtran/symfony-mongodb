{% extends "LikipeFrontendBundle::layout.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}
{% block title %}Login frontend{% endblock %}
{% block fos_user_content %}
{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
	<div class="row-fluid">
		<div class="well span5 center login-box">
			<div class="alert alert-info">
				<h4>HOME PAGE!</h4>
				<p>Symfony2.3</p>
				<div class="center span8">
					<p class="row-fluid">
						<span class="login-success label label-success span8">{{ app.user.username }} Login Success</span>
						<a class="btn logout-success btn-danger span4" href="{{ path('fos_user_security_logout') }}">Logout</a>
					</p>
				</div>
			</div>
		</div><!--/span-->
	</div><!--/row-->
{% else %}
	{% if error %}
		<div class="row-fluid">
			<div class="login-error span5 center alert alert-error">
				<button title="Close" class="close" data-dismiss="alert" type="button">Ã—</button>
				{{ error|trans }}
			</div>
		</div>
	{% endif %}
	<div class="row-fluid">
		<div class="well span5 center login-box">
			<div class="alert alert-info">
				Please login with your Email and Password.
			</div>
			<form  class="form-horizontal" action="{{ path("fos_user_security_check") }}" method="post">
				<fieldset>
					<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
					<div class="form-group">
						<label for="username" class="col-lg-4 control-label">Email</label>
						<div class="col-lg-5">
							<input autofocus class="form-control" name="_username" id="username" type="text" placeholder="Email" value="{{ last_username }}" />
						</div>
					</div>
					<div class="form-group">
						<label for="password" class="col-lg-4 control-label">Password</label>
						<div class="col-lg-5">
							<input class="form-control" name="_password" id="password" type="password" placeholder="Password" />
						</div>
					</div>
					<div class="input-prepend">
						<label class="remember" for="remember_me">
							<input type="checkbox" id="remember_me" name="_remember_me" value="on" />Remember me</label>
					</div>
					<div class="clearfix"></div>

					<div class="center span6">
						<p class="row-fluid">
							<button type="submit" id="_submit" name="_submit" class="btn btn-primary span7">Login</button>
							<a class="btn btn-success span5" href="{{ path('_welcome') }}">Cancel</a>
						</p>
					</div>
				</fieldset>
			</form>
		</div><!--/span-->
	</div><!--/row-->
{% endif %}
{% endblock fos_user_content %}
