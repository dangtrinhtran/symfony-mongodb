<form action="{{ path('ApplicationUserBundle_change_password') }}" {{ form_enctype(form) }} method="POST" class="fos_user_change_password ajax-form">
    <div class="row-fluid flash-error">
        {{ form_errors(form) }}
    </div>
    <div class="alert hide">
        <strong>{% trans %}Oops!{% endtrans %}</strong>
        <ul class="errors">
        </ul>
    </div>
    <div class="row-fluid">
        {% if form.current_password is defined %}
        <div class="div-input">
            {{ form_widget(form.current_password) }}
        </div>
        {% endif %}
        <div class="div-input">
            {{ form_widget (form.plainPassword.first) }}
        </div>
        <div class="div-input">
            {{ form_widget (form.plainPassword.second) }}
        </div>
    </div>
    <button class="btn btn-primary btn-info pull-right" type="submit">{{ 'save'|trans({}, 'editprofile') }}</button>
    {{ form_widget(form._token) }}
</form>
