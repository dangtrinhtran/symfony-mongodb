{% extends "LikipeBackendBundle::layout.html.twig" %}
{% block title "Create user" %}
{% block content %}
<div class="container">

	<div class="row-fluid blog">
		<h1>Create new user!</h1>
		<form class="form-user" action="" method="post" {{ form_enctype(user) }}>
			<div class="content">
			{{ form_errors(user) }}
			<div class="form-content clearfix row-fluid">
				<div class="form-info">
				{{ form_widget(user) }}
				</div>
				{{ form_rest(user) }}
				</div>
				<div class="form-action" style="padding-top: 50px;">
					<input class="btn btn-success" type="submit" value="{% trans %}Save{% endtrans %}" />
					<input class="btn btn-info" type="button" onclick="location.href='{{ path('LikipeBackendBundle_User_index') }}'" value="{% trans %}Cancel{% endtrans %}" />
				</div>
			</div>
		</form>
	</div>

</div> <!-- /container -->
{% endblock %}