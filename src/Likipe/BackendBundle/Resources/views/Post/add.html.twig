{% extends "LikipeBackendBundle::layout.html.twig" %}
{% block title "Create post" %}
{% block content %}
<div class="container">

	<div class="row-fluid blog">
		<h1>Create new post!</h1>
		<form class="form-post" action="" method="post" {{ form_enctype(form) }}>
			<div class="content">
			{{ form_errors(form) }}
			<div class="form-content clearfix row-fluid">
				<div class="form-info">
				{{ form_widget(form) }}
				</div>
					<button id="remove-image-upload" style="display: none">
						<i class="icon-remove"></i>
						Remove
					</button>
				<div class="preview">
					<img id="thumb" width="212px" height="205px" src="{{ asset('backend/images/index.jpg') }}" />
				</div>
				{{ form_rest(form) }}
				</div>
				<div class="form-action" style="padding-top: 50px;">
					<input class="btn btn-success" type="submit" value="{% trans %}Save{% endtrans %}" />
					<input class="btn btn-info" type="button" onclick="location.href='{{ path('LikipeBackendBundle_Post_index') }}'" value="{% trans %}Cancel{% endtrans %}" />
				</div>
			</div>
		</form>
	</div>

</div> <!-- /container -->
{% endblock %}