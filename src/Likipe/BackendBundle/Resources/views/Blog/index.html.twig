{% extends "LikipeBackendBundle::layout.html.twig" %}
{% block title "Blog" %}
{% block content %}
<div class="container">
{% for flashMessage in app.session.flashbag.get('blog_success') %}
	<div class="alert alert-success">
		<button title="Close" class="close" data-dismiss="alert" type="button">Ã—</button>
	{{ flashMessage }}
	</div>
{% endfor %}
	<div class="row-fluid blog">		
		<h2 style="padding-bottom: 20px;">List blogs!</h2>
		<table class="list-posts table table-striped table-bordered table-hover">
			<thead>
				<tr>
					<th>STT</th>
					<th>Id blog</th>
					<th>Title blog</th>
					<th>Created blog</th>
					<th>Updated blog</th>
					<th>Action</th>
				</tr>
			</thead>
			<tbody>
				
			{% for blog in aBlogs %}
				<tr style="border-bottom: 1px solid rgba(0, 0, 0, 0.15); padding-bottom: 15px;">
					<td>{{ loop.index }}</td>
					<td>{{ blog.id }}</td>
					<td>{{ blog.title }}</td>
					{% set oDateCreate =  blog.created %}
					<td>{{ formatDateTime(oDateCreate) }}</td>
					{% set oDateUpdate =  blog.updated %}
					<td>{{ formatDateTime(oDateUpdate) }}</td>
					<td>
						<a class="btn btn-edit btn-info" href="{{ path('LikipeBackendBundle_Blog_edit', {'iBlogId': blog.id}) }}"><i class="icon-edit"></i>{% trans %}Edit blog{% endtrans %}</a>
						<br><br>
						<a class="btn btn-delete btn-danger" href="{{ path('LikipeBackendBundle_Blog_delete', {'iBlogId': blog.id}) }}" onclick="return confirm('{% trans %}Are you sure you want to delete this post ?{% endtrans %}');"><i class="icon-trash"></i>{% trans %}Delete blog{% endtrans %}</a>
					</td>
				</tr>
			{% endfor %}
			</tbody>
		</table>
		
		<div class="pagination pagination-small pagination-right">
			
		</div>
	
		<div class="btn-submit-post" style="padding-top: 20px; padding-bottom: 50px;">	
			<a class="btn btn-success" href="{{ path('LikipeBackendBundle_Blog_add') }}"><i class="icon-plus"></i>{% trans %}Create blog{% endtrans %}</a>
		</div>
	</div>
</div> <!-- /container -->
{% endblock %}