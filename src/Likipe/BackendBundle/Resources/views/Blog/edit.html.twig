{% extends "LikipeBackendBundle::layout.html.twig" %}
{% block title "Edit blog" %}
{% block content %}
<div class="container">

	<div class="row-fluid blog">
		<h1>Edit blog!</h1>
		<form class="form-blog" action="" method="post" {{ form_enctype(blog) }}>
			<div class="content">
			{{ form_errors(blog) }}
			<div class="form-content clearfix">
				<div class="form-info row-fluid">
				{{ form_widget(blog) }}
				</div>
				{{ form_rest(blog) }}
				</div>
					<div class="form-action" style="padding-top: 50px;">
					<input class="btn btn-success" type="submit" value="{% trans %}Save{% endtrans %}" />
					<input class="btn btn-info" type="button" onclick="location.href='{{ path('LikipeBackendBundle_Blog_index') }}'" value="{% trans %}Cancel{% endtrans %}" />
				</div>
			</div>
		</form>
	</div>
	
</div> <!-- /container -->
{% endblock %}