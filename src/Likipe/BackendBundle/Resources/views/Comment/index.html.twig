{% extends "LikipeBackendBundle::layout.html.twig" %}
{% block title "Comments" %}
{% block content %}
<div class="container">
{% for flashMessage in app.session.flashbag.get('comment_success') %}
	<div class="alert alert-success">
		<button title="Close" class="close" data-dismiss="alert" type="button">Ã—</button>
	{{ flashMessage }}
	</div>
{% endfor %}
	<div class="row-fluid blog">		
		<h2 style="padding-bottom: 20px;">List comments!</h2>
		<table class="list-posts table table-striped table-bordered">
			<thead>
				<tr>
					<th>STT</th>
					<th>Id comment</th>
					<th>Name</th>
					<th>Email</th>
					<th>Content</th>
					<th>Created</th>
					<th>Status</th>
					{% if is_granted('ROLE_ADMIN') %}
					<th>Action</th>
					{% endif %}
				</tr>
			</thead>
			<tbody>
				{% for oComment in aComments %}
				<tr style="border-bottom: 1px solid rgba(0, 0, 0, 0.15); padding-bottom: 15px;">
					<td>{{ loop.index }}</td>
					<td>{{ oComment.id }}</td>
					<td>{{ oComment.name }}</td>
					<td>{{ oComment.email }}</td>
					<td>{{ oComment.content }}</td>
					<td>{{ formatDateTime(oComment.created) }}</td>
					<td>
					{% if  oComment.isActive == false %}
						<span class="label label-comment label-warning">Disable</span>
						{% if is_granted('ROLE_ADMIN') %}
						<br>
						<a class="btn btn-enable btn-primary" href="{{ path('LikipeBackendBundle_Comment_enable', {'iPostId': iPostId, 'iCommentId': oComment.id}) }}">Enable Comment</a>
						{% endif %}
					{% else %}
						<span class="label label-comment label-success">Enable</span>
						{% if is_granted('ROLE_ADMIN') %}
						<br>
						<a class="btn btn-enable btn-warning" href="{{ path('LikipeBackendBundle_Comment_disable', {'iPostId': iPostId, 'iCommentId': oComment.id}) }}">Disable Comment</a>
						{% endif %}
					{% endif %}
					</td>
					{% if is_granted('ROLE_ADMIN') %}
					<td>
						<a class="btn btn-delete btn-danger" href="{{ path('LikipeBackendBundle_Comment_delete', {'iPostId': iPostId, 'iCommentId': oComment.id}) }}" onclick="return confirm('{% trans %}Are you sure you want to delete this comment ?{% endtrans %}');">{% trans %}Delete comment{% endtrans %}</a>
					</td>
					{% endif %}
				</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
	<div class="row-fluid">		
		<div class="btn-submit-post" style="padding-top: 20px; padding-bottom: 50px;">	
			<a class="btn btn-success" href="{{ path('LikipeBackendBundle_Post_index') }}">{% trans %}Back to post{% endtrans %}</a>
		</div>
	</div>
</div> <!-- /container -->
{% endblock %}