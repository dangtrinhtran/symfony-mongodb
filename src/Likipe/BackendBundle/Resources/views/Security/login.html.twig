{% extends "LikipeBackendBundle::layout-login.html.twig" %}
{% block title "Login" %}
{% block content_login_backend %}
<div class="container-fluid">
	<div class="row-fluid">
		<div class="row-fluid">
			<div class="span12 center login-header">
				<h2 class="h2-backend">Symfony training with MongoDB</h2>
				<h3 class="backend">Backend</h3>
			</div><!--/span-->
		</div><!--/row-->
		{% if error %}
		<div class="row-fluid">
			<div class="login-error span5 center alert alert-error">
				<button title="Close" class="close" data-dismiss="alert" type="button">Ã—</button>
				{{ error.message }}
			</div>
		</div>
		{% endif %}
		<div class="row-fluid">
			<div class="well span5 center login-box">
				<div class="alert alert-info">
					Please login with your Username and Password.
				</div>
				<form class="form-horizontal" action="{{ path('LikipeBackendBundle_Security_login_check') }}" method="post">
					<fieldset>
						<div class="input-prepend" title="Username" data-rel="tooltip">
							<span class="add-on"><i class="icon-user"></i></span><input autofocus class="input-large span10" name="_username" id="username" type="text" placeholder="Username" value="{{ last_username }}" />
						</div>
						<div class="clearfix"></div>

						<div class="input-prepend" title="Password" data-rel="tooltip">
							<span class="add-on"><i class="icon-lock"></i></span><input class="input-large span10" name="_password" id="password" type="password" placeholder="Password" />
						</div>
						<div class="clearfix"></div>

						<div class="input-prepend">
							<label class="remember" for="remember_me"><input type="checkbox" id="remember_me" name="_remember_me" />Remember me</label>
						</div>
						<div class="clearfix"></div>

						<div class="center span6">
							<p class="row-fluid">
								<button type="submit" class="btn btn-primary span7">Login</button>
								<a class="btn btn-success span5" href="{{ path('_welcome') }}">Cancel</a>
							</p>
						</div>
					</fieldset>
				</form>
			</div><!--/span-->
		</div><!--/row-->
	</div><!--/fluid-row-->
</div><!--/.fluid-container-->
{% endblock content_login_backend %}